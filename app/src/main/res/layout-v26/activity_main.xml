<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="226dp"
        android:layout_height="310dp"
        android:layout_marginEnd="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7">

        <Button
            android:id="@+id/btn8"
            android:layout_width="@dimen/btnNumberWidth"
            android:layout_height="@dimen/btnHeight"
            android:layout_marginEnd="@dimen/btn8MarginEnd"
            android:backgroundTint="#d6d7d7"
            android:text="@string/_8"
            android:textColor="#795548"
            app:layout_constraintEnd_toStartOf="@+id/btn9"
            app:layout_constraintTop_toBottomOf="@+id/btn5" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="@dimen/btnNumberWidth"
            android:layout_height="@dimen/btnHeight"
            android:layout_marginTop="@dimen/btn1MarginTop"
            android:layout_marginEnd="@dimen/btn1MarginEnd"
            android:backgroundTint="#d6d7d7"
            android:text="@string/_1"
            android:textColor="#795548"
            app:layout_constraintEnd_toStartOf="@+id/btn2"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="@dimen/btnNumberWidth"
            android:layout_height="@dimen/btnHeight"
            android:layout_marginTop="@dimen/btn3MarginTop"
            android:layout_marginEnd="@dimen/btn3MarginEnd"
            android:backgroundTint="#d6d7d7"
            android:text="@string/_3"
            android:textColor="#795548"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="@dimen/btnNumberWidth"
            android:layout_height="@dimen/btnHeight"
            android:layout_marginEnd="@dimen/btn6MarginEnd"
            android:backgroundTint="#d6d7d7"
            android:text="@string/_6"
            android:textColor="#795548"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn3" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="@dimen/btnNumberWidth"
            android:layout_height="@dimen/btnHeight"
            android:layout_marginEnd="@dimen/btn5MarginEnd"
            android:backgroundTint="#d6d7d7"
            android:text="@string/_5"
            android:textColor="#795548"
            app:layout_constraintEnd_toStartOf="@+id/btn6"
            app:layout_constraintTop_toBottomOf="@+id/btn2" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="@dimen/btnNumberWidth"
            android:layout_height="@dimen/btnHeight"
            android:layout_marginEnd="@dimen/btn4MarginEnd"
            android:backgroundTint="#d6d7d7"
            android:text="@string/_4"
            android:textColor="#795548"
            app:layout_constraintEnd_toStartOf="@+id/btn5"
            app:layout_constraintTop_toBottomOf="@+id/btn1" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="@dimen/btnNumberWidth"
            android:layout_height="@dimen/btnHeight"
            android:layout_marginEnd="@dimen/btn7MarginEnd"
            android:backgroundTint="#d6d7d7"
            android:text="@string/_7"
            android:textColor="#795548"
            app:layout_constraintEnd_toStartOf="@+id/btn8"
            app:layout_constraintTop_toBottomOf="@+id/btn4" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="@dimen/btnNumberWidth"
            android:layout_height="@dimen/btnHeight"
            android:layout_marginEnd="@dimen/btn9MarginEnd"
            android:backgroundTint="#d6d7d7"
            android:text="@string/_9"
            android:textColor="#795548"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn6" />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="@dimen/btnClearWidth"
            android:layout_height="@dimen/btnHeight"
            android:layout_marginEnd="@dimen/btnClearMarginEnd"
            android:layout_marginBottom="@dimen/btnClearMarginBottom"
            android:backgroundTint="#d6d7d7"
            android:text="@string/clear"
            android:textColor="#795548"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn8"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="@dimen/btnNumberWidth"
            android:layout_height="@dimen/btnHeight"
            android:layout_marginEnd="@dimen/btn0MarginEnd"
            android:layout_marginBottom="@dimen/btn0MarginBottom"
            android:backgroundTint="#d6d7d7"
            android:text="@string/_0"
            android:textColor="#795548"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnClear"
            app:layout_constraintTop_toBottomOf="@+id/btn7"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="DuplicateSpeakableTextCheck" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="@dimen/btnNumberWidth"
            android:layout_height="@dimen/btnHeight"
            android:layout_marginTop="@dimen/btn2MarginTop"
            android:layout_marginEnd="@dimen/btn2MarginEnd"
            android:backgroundTint="#d6d7d7"
            android:text="@string/_2"
            android:textColor="#795548"
            app:layout_constraintEnd_toStartOf="@+id/btn3"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/txtPriceMarginStart"
        android:layout_marginTop="@dimen/txtPriceMarginTop"
        android:layout_marginEnd="@dimen/txtPriceMarginEnd"
        android:text="@string/price"
        android:textSize="@dimen/txtPriceTextSize"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toStartOf="@+id/constraintLayout2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="@dimen/constraintLayout2LayoutWidth"
        android:layout_height="@dimen/constraintLayout2LayoutHeight"
        android:layout_marginTop="@dimen/constraintLayout2LayoutMarginTop"
        android:layout_marginEnd="@dimen/constraintLayout2LayoutMarginEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtInput"
            android:layout_width="match_parent"
            android:layout_height="@dimen/txtInputLayoutHeight"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="2sp"
            android:maxWidth="@dimen/txtInputMaxWidth"
            android:minWidth="@dimen/txtInputMinWidth"
            android:textSize="@dimen/txtInputTextSize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.488"
            tools:text="@string/txtInputToolText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/constraintLayoutLayoutWidth"
        android:layout_height="@dimen/constraintLayoutLayoutHeight"
        android:layout_marginStart="@dimen/constraintLayoutLayoutMarginStart"
        android:layout_marginTop="@dimen/constraintLayoutLayoutMarginTop"
        android:layout_marginEnd="@dimen/constraintLayoutLayoutMarginEnd"
        android:layout_marginBottom="@dimen/constraintLayoutLayoutMarginBottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/constraintLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPrice"
        app:layout_constraintVertical_bias="0.022">

        <TextView
            android:id="@+id/txtAmount10dollars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/txtAmountMarginStart"
            android:layout_marginTop="@dimen/txtAmountMarginTop"
            android:layout_marginEnd="@dimen/txtAmountMarginEnd"
            android:gravity="end"
            android:text="@string/label_0"
            android:textSize="@dimen/txtPriceHeight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toEndOf="@+id/txt10dollars"
            app:layout_constraintTop_toBottomOf="@+id/txtAmount20dollars" />

        <TextView
            android:id="@+id/txtAmount20dollars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/txtAmountMarginStart"
            android:layout_marginTop="@dimen/txtAmountMarginTop"
            android:layout_marginEnd="@dimen/txtAmountMarginEnd"
            android:text="@string/label_0"
            android:textSize="@dimen/txtPriceHeight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt20dollars"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtAmount1dollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/txtAmountMarginStart"
            android:layout_marginTop="@dimen/txtAmountMarginTop"
            android:layout_marginEnd="@dimen/txtAmountMarginEnd"
            android:text="@string/label_0"
            android:textSize="@dimen/txtPriceHeight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toEndOf="@+id/txt1dollar"
            app:layout_constraintTop_toBottomOf="@+id/txtAmount5dollars" />

        <TextView
            android:id="@+id/txtAmount25cents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/txtAmountMarginStart"
            android:layout_marginTop="@dimen/txtAmountMarginTop"
            android:layout_marginEnd="@dimen/txtAmountMarginEnd"
            android:text="@string/label_0"
            android:textSize="@dimen/txtPriceHeight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toEndOf="@+id/txt25cents"
            app:layout_constraintTop_toBottomOf="@+id/txtAmount1dollar" />

        <TextView
            android:id="@+id/txtAmount10cents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/txtAmountMarginStart"
            android:layout_marginTop="@dimen/txtAmountMarginTop"
            android:layout_marginEnd="@dimen/txtAmountMarginEnd"
            android:text="@string/label_0"
            android:textSize="@dimen/txtPriceHeight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.578"
            app:layout_constraintStart_toEndOf="@+id/txt10cents"
            app:layout_constraintTop_toBottomOf="@+id/txtAmount25cents" />

        <TextView
            android:id="@+id/txtAmount5cents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/txtAmountMarginStart"
            android:layout_marginTop="@dimen/txtAmountMarginTop"
            android:layout_marginEnd="@dimen/txtAmountMarginEnd"
            android:text="@string/label_0"
            android:textSize="@dimen/txtPriceHeight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintStart_toEndOf="@+id/txt5cents"
            app:layout_constraintTop_toBottomOf="@+id/txtAmount10cents" />

        <TextView
            android:id="@+id/txtAmount1cent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/txtAmountMarginStart"
            android:layout_marginTop="@dimen/txtAmountMarginTop"
            android:layout_marginEnd="@dimen/txtAmountMarginEnd"
            android:text="@string/label_0"
            android:textSize="@dimen/txtPriceHeight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintStart_toEndOf="@+id/txt1cent"
            app:layout_constraintTop_toBottomOf="@+id/txtAmount5cents" />

        <TextView
            android:id="@+id/txtAmount5dollars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/txtAmountMarginStart"
            android:layout_marginTop="@dimen/txtAmountMarginTop"
            android:layout_marginEnd="@dimen/txtAmountMarginEnd"
            android:text="@string/label_0"
            android:textSize="@dimen/txtPriceHeight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toEndOf="@+id/txt5dollars"
            app:layout_constraintTop_toBottomOf="@+id/txtAmount10dollars" />

        <TextView
            android:id="@+id/txt5dollars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/txt5dollarsMarginStart"
            android:layout_marginTop="@dimen/txt5dollarsMarginTop"
            android:text="@string/_5dollars"
            android:textSize="@dimen/txtPriceHeight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt10dollars" />

        <TextView
            android:id="@+id/txt20dollars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/txt20dollarsMarginStart"
            android:layout_marginTop="@dimen/txt20dollarsMarginTop"
            android:text="@string/_20dollars"
            android:textSize="@dimen/txtPriceHeight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt1dollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/txt1dollarMarginStart"
            android:layout_marginTop="@dimen/txt1dollarMarginTop"
            android:text="@string/_1dollar"
            android:textSize="@dimen/txtPriceHeight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt5dollars" />

        <TextView
            android:id="@+id/txt25cents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/txt25centsMarginStart"
            android:layout_marginTop="@dimen/txt25centsMarginTop"
            android:text="@string/_25cents"
            android:textSize="@dimen/txtPriceHeight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt1dollar" />

        <TextView
            android:id="@+id/txt10cents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/txt10centsMarginStart"
            android:layout_marginTop="@dimen/txt10centsMarginTop"
            android:text="@string/_10cents"
            android:textSize="@dimen/txtPriceHeight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt25cents" />

        <TextView
            android:id="@+id/txt5cents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/txt5centsMarginStart"
            android:layout_marginTop="@dimen/txt5centsMarginTop"
            android:text="@string/_5cents"
            android:textSize="@dimen/txtPriceHeight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt10cents" />

        <TextView
            android:id="@+id/txt1cent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/txt1centMarginStart"
            android:layout_marginTop="@dimen/txt1centMarginTop"
            android:text="@string/_1cent"
            android:textSize="@dimen/txtPriceHeight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt5cents" />

        <TextView
            android:id="@+id/txt10dollars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/txt10dollarsMarginStart"
            android:layout_marginTop="@dimen/txt10dollarsMarginTop"
            android:text="@string/_10dollars"
            android:textSize="@dimen/txtPriceHeight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt20dollars" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>